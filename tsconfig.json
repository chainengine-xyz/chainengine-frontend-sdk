{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "moduleResolution": "Node",
    "types": ["jest", "node"],
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"]
}
